	<ul>
		<li><a href="#" target="_blank"><i class="fa fa-twitter fa-2x"></i></a></li>
		<li><a href="#" target="_blank"><i class="fa fa-facebook fa-2x"></i></a></li>
		<li><a href="#" target="_blank"><i class="fa fa-google-plus fa-2x"></i></a></li>
	</ul>
</section>

<script src="{{ asset('assets/main/js/typed.js') }}"></script>
<script src="{{ asset('assets/main/js/wow.min.js') }}"></script>
<link href="{{ css }}" rel="stylesheet" />
<style>

</style>
<script>
$(function() {
	var typedStrings = [];
	$("#typed-strings li").each(function() {
		typedStrings.push($(this).text());
		console.log(typedStrings);
		if ($(this).is(':last-child')) {
			console.log(typedStrings);
			$("#typed").typed({
				strings: typedStrings,
				typeSpeed: 30, // typing speed
				backDelay: 0, // pause before backspacing
				callback: function() {
					$('#footer').show();
					$(".text-body").css('height', '150px');
				}
			});
		}
	});

	new WOW().init();


});
</script>
{% endblock %}
