{% spaceless %}
<!DOCTYPE html>
<html>
    <head>

        <title>{{ settings.meta.title }}</title>
		<meta charset="UTF-8" />
        <meta name="Description" Content="{{ settings.meta.description }}" />
        <meta name="Keywords" Content="{{ settings.meta.keywords }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Bootstrap -->
		{% block stylesheets %}
        <link href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" media="screen">
		 <link href="{{ asset('assets/main/css/animate.min.css') }}" rel="stylesheet" media="screen">
		<script src="{{ asset('assets/main/js/webfont.min.js') }}"></script>
        <script>
            WebFont.load({
                google: {
                    families: ['Raleway', 'Lato']
                }
            });
            </script>
            <link href="{{ css }}" rel="stylesheet" />
            <script src="{{ asset('assets/jquery/jquery.min.js') }}"></script>
            <script src="{{ asset('assets/main/js/modernizr.custom.js') }}"></script>
			
            <!--[if lt IE 9]><script src="assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
            <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
            <!--[if lt IE 9]>
              <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
              <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
            <![endif]-->
		{% endblock %}
        </head>

        <body>

		{% block body %}

		{% endblock %}

		{% block footerscript %}
            <!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
            <!-- Include all JavaScripts, compiled by Assetic -->
            <!-- Animation end -->
            <link href="{{ asset('assets/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" media="screen">

		{% endblock %}
		<a id="toTop" href="#header" style="display: inline;"><span id="toTopHover"></span><img width="40" height="40" alt="To Top" src="{{ asset('media/to-top.png') }}"></a>
        </body>
    </html>
{% endspaceless %}