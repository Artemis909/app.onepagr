{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'User'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>User</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Name</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.name }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Username</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.username }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Email</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.email }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Password</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.password }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Salt</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.salt }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Active</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.active }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Confirmed</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.confirmed }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Roles</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.roles }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Confirmationtoken</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.confirmationToken }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Lastlogin</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.lastLogin|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Passwordrequestedat</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.passwordRequestedAt|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Updatepasswordonconfirmation</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.updatePasswordOnConfirmation }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Facebookuserid</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.facebookUserId }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Facebookaccesstoken</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.facebookAccessToken }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('user') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('user_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}