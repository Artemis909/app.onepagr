{% extends 'OnepagrUserBundle:User:base.html.twig' %}
{% block form %}
<div class="container">

	<div class="row padding-top" style="">
		<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
			<div id="registration-form">
				<h1>Register For Free</h1>
				<h6>And start building today. </h6>
				<!-- {{ form(form, {'method': 'POST'}) }}-->
			
				{{ form_errors(form) }}
				 {{ form_errors(form.name) }}
				 {{ form_errors(form.email) }}
				 {{ form_errors(form.password) }}
				<form role="form" id="" name="{{ form.vars.name }}" action="{{ form.vars.action }}" method="{{ form.vars.method }}">
					<fieldset>
						<div class="form-group">
							<input type="text" value="{{ form.name.vars.value }}" name="{{ form.name.vars.full_name }}" id="name" class="form-control input-lg" placeholder="Name">
						</div>
						<div class="form-group">
							<input type="email"  value="{{ form.email.vars.value }}" name="{{ form.email.vars.full_name }}" id="email" class="form-control input-lg" placeholder="Email Address">
						</div>
						<div class="form-group">
							<input type="password" name="{{ form.password.vars.full_name }}" id="password" class="form-control input-lg" placeholder="Password">
						</div>
						<input type="hidden" name="{{ form._token.vars.full_name }}" value="{{ form._token.vars.value }}" />
						<div class="row">
							<div class="col-xs-12 col-sm-12 col-md-6 pull-right">
								<input type="submit" class="btn btn-lg btn-success btn-block" value="Start Designing">
							</div>

						</div>
					</fieldset>
					<p>By creating an account, you agree to Onepagr's <a target="_blank" href="#">Privacy Policy</a> and <a target="_blank" href="#">Terms</a>.</p>

				</form>
			</div>
					<div class="footnote"><h3>Already have an account? <a target="_self" class="redirect" href="{{ path('onepagr_login')}}">Log in!</a></h3></div>

		</div>
	</div>

</div>
{% endblock %}