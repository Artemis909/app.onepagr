{% extends 'OnepagrAppBundle::layout.html.twig' %}
{% block body %}
<section id="header" class="section section-full-height header">
	<div class="layer  layer3"></div>
	<div class="layer layer2 background-gradient-2">
	</div>
	<div class="layer container layer1">
		<div class="row-fluid top-nav">
			
			<div class="navbar-header">
      <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="../" class="navbar-brand">Onepagr</a>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
       <!--
		<ul class="nav navbar-nav">
		 
        <li>
          <a href="#">Link</a>
